<UserControl
	x:ClassModifier="internal"
	x:Class="Editor_Test.BoolEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="200" Padding="5">
	<StackPanel>
		<TextBox Name="_tb" IsReadOnly="True" />
		<UniformGrid Columns="2">
			<Button Click="bYes_OnClick" Margin="5">Yes</Button>
			<Button Click="bNo_OnClick" Margin="5">No</Button>
		</UniformGrid>
	</StackPanel>
</UserControl>
