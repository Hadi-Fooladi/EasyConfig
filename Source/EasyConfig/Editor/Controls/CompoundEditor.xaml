<UserControl
	x:ClassModifier="public"
	x:Class="EasyConfig.Editor.CompoundEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:EasyConfig.Editor"
	mc:Ignorable="d"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<ColumnDefinition Width="6" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		
		<DockPanel Grid.Column="0">
			<Button Name="bNewDel" DockPanel.Dock="Top" Click="bNewDel_OnClick" />

			<TextBlock Name="_descLabel" DockPanel.Dock="Bottom" Background="Beige" Padding="5,2" Visibility="Collapsed" TextWrapping="Wrap" />
			
			<ListBox Name="_listbox" SelectionChanged="ListBox_OnSelectionChanged">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<TextBlock
							Text="{Binding Name}"
							Foreground="{Binding Color}"
							FontWeight="{Binding FontWeight}" />
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</DockPanel>
		
		<GridSplitter Grid.Column="1" Width="2" Background="Black" HorizontalAlignment="Center" Margin="0,10" />

		<ContentControl Grid.Column="2" Name="_fieldEditorContainer" />
	</Grid>
</UserControl>
