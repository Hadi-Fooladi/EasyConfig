<Window
	x:ClassModifier="internal"
	x:Class="Editor.SettingsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Editor"
	mc:Ignorable="d"
	Title="Settings"
	FontFamily="Consolas"
	FontSize="14"
	Width="320" Height="200"
	Icon="/Resources/Settings.png"
	WindowStartupLocation="CenterScreen">

	<DockPanel>
		<DockPanel DockPanel.Dock="Bottom">
			<DockPanel.Resources>
				<Style TargetType="Button">
					<Setter Property="FontSize" Value="18" />
					<Setter Property="FontWeight" Value="DemiBold" />
					<Setter Property="Margin" Value="5" />
					<Setter Property="Width" Value="100" />
					<Setter Property="Height" Value="36" />
				</Style>
			</DockPanel.Resources>

			<Button DockPanel.Dock="Left" IsDefault="True" Click="bOK_OnClick">OK</Button>
			<Button DockPanel.Dock="Right" IsCancel="True" Click="bCancel_OnClick">Cancel</Button>

			<Grid />
		</DockPanel>

		<CheckBox Name="cbShowChangeLogBeforeSave"  Margin="5" VerticalContentAlignment="Center">Show change log before save</CheckBox>
	</DockPanel>
</Window>
