<Window
	x:ClassModifier="internal"
	x:Class="Editor.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Editor"
	mc:Ignorable="d"
	Title="EasyConfig Editor"
	Width="640" Height="480"
	FontSize="16"
	WindowStartupLocation="CenterScreen">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_Save" />
				<Separator />
				<MenuItem Header="E_xit" Click="miExit_OnClick" />
			</MenuItem>
		</Menu>
		<TreeView Name="TV" DockPanel.Dock="Left" Width="175" SelectedItemChanged="TV_OnSelectedItemChanged" />
		<DataGrid Name="DG" AutoGenerateColumns="False" CanUserDeleteRows="False" SelectionMode="Single" SelectionUnit="FullRow">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True" />
				<DataGridTextColumn Header="Type" Binding="{Binding Type}" IsReadOnly="True" />
				<DataGridTemplateColumn Header="Override Default">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<CheckBox IsEnabled="{Binding HasDefault}" IsChecked="{Binding OverrideDefault}" HorizontalAlignment="Center" VerticalAlignment="Center" />
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
				<DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*" />
				<DataGridTextColumn Header="Default" Binding="{Binding Default}" IsReadOnly="True" Width="80" />
			</DataGrid.Columns>
		</DataGrid>
	</DockPanel>
</Window>
